- companyName = (typeof companyName != 'undefined') ? companyName : 'curapps'
- logoUrl = (typeof logoUrl != 'undefined') ? logoUrl : 'http://localhost:9898/logo_blue.png'
- cssUrl = (typeof cssUrl != 'undefined') ? cssUrl : 'http://curapps.com/bootstrap/assets/css/bootstrap.css'
- host = (typeof host != 'undefined') ? host : 'This site'
!!!
html
  head
    title #{companyName} - #{host} is down for maintenance
    link(rel='stylesheet', href=cssUrl)
    style.
      html, body {
        text-align:center;
        margin-left: auto;
        margin-right: auto;
        background-color: white;
      }
      .mainimg {
        margin-top: 50px;
      }
      
      h1, h2, h3, h4, h5, h6 {
        color: #555555;
      }
      i.hugeicon {
        display: block;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        font-size: 150px;
        color: #BBB;
      }
      .header {
        background: #333;
        padding-top: 20px;
        -webkit-box-shadow: 0 0 10px #111;
        -moz-box-shadow: 0 0 10px #111;
        box-shadow: 0 0 10px #111;
        padding-bottom: 20px;
      }
      .header hr {
        border-color: #444;
      }
      .header h3 {
        text-shadow: 2px 0 4px black;
        
      }
  body
    .header
      .container-fluid
        .row-fluid
          h3(style='text-align: center;').pull-left #{companyName}
          h3(style='text-align: center;').pull-right DunkyDooball
        .clearfix
    .mainimg
      img(src=logoUrl)
      h3 #{host} is down for maintenance <i class="icon-spin icon-cog"></i>
      i.hugeicon.icon-ambulance
      h4 Please try again later.