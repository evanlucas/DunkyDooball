- profile = (typeof profile != 'undefined') ? profile : {}
extends default
block extraStyles
  link(rel='stylesheet', href='/alertify.js/themes/alertify.core.css')
  link(rel='stylesheet', href='/alertify.js/themes/alertify.default.css')
block mainContent
  .header
    .container-fluid
      .row-fluid
        img(src=logoUrl).pull-left.logo
        h3(style='text-align: right;').pull-right Dunky Dooball
        .spinner_parent.pull-right
      .clearfix
      hr
      ul.large-pills
        li
          a(href='/')
            i.icon-home
            br
            | Home
        li
          a(href='/network')
            i.icon-signal
            br
            | Network
        li
          a(href='/apps').active
            i.icon-sitemap
            br
            | Apps
        - if (profile.role && profile.role === 'Admin')
          li
            a(href='/users')
              i.icon-group
              br
              | Users
      .clearfix
  .mainContent
    .modal.hide.fade.createAppModal
      .modal-header
        button(type='button', data-dismiss='modal').close x
        h3 Create App
      .modal-body
        form.form.form-horizontal
          mixin tf('textUrl', 'Git URL', 'Git URL')
          mixin tf('textDir', 'Directory Name', 'Directory Name')
          select.selectEnv
            option(value='na') Select Environment
            option(value='development') Development
            option(value='test') Test
            option(value='production') Production
      .model-footer
        button(type='button').btn-save.btn.btn-primary Create
        button(type='button', data-dismiss='modal').btn-cancel.btn.btn-danger Cancel
    .container-fluid
      h3.dt Apps
      table.table.table-bordered
        thead
          th Name
            i
          th Port
            i
          th Environment
            i
          th Domains
          th Status
            i
          th(style='width: 200px; min-width: 189px;') Actions
        tbody
  .clearfix
  br
  br
block extraScripts
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script(type='text/javascript', src='/DataTables/media/js/jquery.dataTables.js')
  script(type='text/javascript', src='/alertify.js/lib/alertify.js')
  script(type='text/javascript', src='/spin.js/spin.js')
  script(type='text/javascript', src='/js/helper.js')
  script(type='text/javascript', src='/js/apps.js')